<%# app/views/tasks/_form.html.erb %>
<%= form_with(model: @task, class: "space-y-4", data: { controller: "task-form" }) do |form| %>
  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, 
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
        data: { "task-form-target": "title" } %>
    <div class="error-message" data-task-form-target="titleError"></div>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
        data: { "task-form-target": "description" } %>
    <div class="error-message" data-task-form-target="descriptionError"></div>
  </div>

  <div>
    <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :status, 
        options_for_select([['Pending', 'pending'], ['In Progress', 'in_progress'], ['Completed', 'completed']]),
        {},
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
        data: { "task-form-target": "status" } %>
    <div class="error-message" data-task-form-target="statusError"></div>
  </div>

  <div>
    <%= form.label :priority, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :priority,
        in: 1..5,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
        data: { "task-form-target": "priority" } %>
    <div class="error-message" data-task-form-target="priorityError"></div>
  </div>

  <div>
    <%= form.submit class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
        data: { "task-form-target": "submit", action: "click->task-form#submitForm" } %>
  </div>
<% end %>
